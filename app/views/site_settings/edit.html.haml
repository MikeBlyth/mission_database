.active-scaffold.site_settings
  %h2 Site Settings
  = form_tag(update_site_settings_path, :method => :put) do 
    %h3 Email
    
    = settings_field(:sendgrid_user_name)
    = settings_field(:sendgrid_password)
    %br
    %h3 SMS Text Messaging
    = settings_field(:outgoing_sms, :label=>'Outgoing SMS')
    %h4 Clickatell 
    = settings_field(:clickatell_user_name)
    = settings_field(:clickatell_password)
    = settings_field(:clickatell_api_id, :label=>'Clickatell API ID')
    %h4 Twilio
    = settings_field(:twilio_account_sid, :label=>'Twilio account SID')
    = settings_field(:twilio_account_token, :password=>true)
    = settings_field(:twilio_api_version, :label=>'Twilio API version')
    = settings_field(:twilio_phone_number)
    
    = submit_tag 'Save'

