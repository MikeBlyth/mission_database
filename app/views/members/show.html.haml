%h1 #{@record.full_name}
%table
  - if @record.spouse
    %tr
      %td.label Spouse
      %td= @record.spouse
  %tr
    %td.label SIM Family ID
    %td= @record.family.sim_id
    %td.label Birth date
    %td= @record.birth_date    
    %td.label Sex
    %td= @record.sex
    %td.label Nationality
    %td= @record.country.nationality
  %tr
    %td.label Home location
    %td= @record.residence_location.to_label
    %td.label Ministry
    %td= "#{@record.ministry.to_label} #{@record.ministry_comment}" 
    %td.label Ministry location
    %td= @record.work_location.to_label
    %td.label Status
    %td= @record.status.to_label
  - if @record.temporary_location
    %tr
      %td.label Temporary location
      %td= @record.temporary_location
      %td.label dates
      %td= "#{@record.temporary_location_from_date} to #{@record.temporary_location_until_date}"
  %tr
    %td 
    %td= 1
    %td 
    %td= 1
