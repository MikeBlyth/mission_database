!!! html
!!!
%html
  %head
    %title= @title ||= 'SIM' 
    %meta{ 'http-equiv' => "content-type", 'content'=> "text/html;charset=UTF-8"}
    = include_stylesheets :common, :media => 'all'
    = yield :stylesheets
    = include_javascripts :common
    = yield :javascripts
    = csrf_meta_tag 
    = yield :head
%body{:class => (current_user ? "theme-#{(current_user.theme || '').downcase}" : '') }
  #menu_toggle
    %a.show_menu
      %img(src="stylesheets/images/arrows-4-icon.png")
      Show Menu
    #signed_in
      = signed_in? ? "Signed in as #{current_user.name}" : "Not signed in" 
  %div 
    #menu
      = render 'shared/side_menu' 
    #content
      - if flash.any?  
        #notice
          - flash.each do |key, value| 
            %div{:class=>"flash #{key}" }= value
      #main= yield 

