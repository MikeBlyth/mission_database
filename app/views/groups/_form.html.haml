= form_for(@group) do |f|
  - if @group.errors.any?
    #error_explanation
      %h2
        = pluralize(@group.errors.count, "error")
        prohibited this group from being saved:
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :primary
    %br/
    = f.check_box :primary
  .field
    = f.label :parent_group_id
    %br/
    = f.collection_select(:parent_group_id, Group.all(:order=>'name'), :id, :name, {:include_blank => true} )
  .actions
    = f.submit
